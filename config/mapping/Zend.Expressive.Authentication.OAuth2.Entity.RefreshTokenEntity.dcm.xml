<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Zend\Expressive\Authentication\OAuth2\Doctrine\Entity\RefreshTokenEntity" table="oauth_refresh_tokens">
        <id name="identifier" column="id" type="string" />
        <many-to-one field="accessToken" target-entity="Zend\Expressive\Authentication\OAuth2\Doctrine\Entity\AccessTokenEntity" />
        <field name="revoked" column="revoked" type="boolean" nullable="false" />
        <field name="expiryDateTime" column="expires_at" type="datetime" nullable="false" />
    </entity>
</doctrine-mapping>
